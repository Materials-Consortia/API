{
    "title": "Base URL info",
    "type": "object",
    "properties": {
        "type": {
            "type":"string",
            "enum": [ "info" ]
        },
        "id": {
            "type":"string",
            "enum": [ "/" ]
        },
        "attributes": {
            "type":"object",
            "properties": {
                "api_version": {"type": "string"},
                "available_api_versions": {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "format":"uri-reference",
                            "type": "string"
                        }
                    }
                },
                "formats": {
                    "type": "array",
                    "enum": ["json"]
                },
                "entry_types_by_format": {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "type": "array",
                            "items": { "type": "string" },
                            "uniqueItems": true
                        }
                    },
                    "properties":{
                        "json":{
                            "type": "array",
                            "items": {
                                "enum": ["structure"]
                            }
                        }
                     }
                }
            },
            "additionalProperties": false
        }
    },
    "required": [ "type", "id", "attributes" ],
    "additionalProperties": false
}
