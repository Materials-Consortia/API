{
   "title":"OPTiMaDe response",
   "description": "OPTiMaDe JSON response",
   "type":"object",
   "properties":{
      "data":{
          "description": "Data returned for the query.",
          "oneOf":[
             {
                "$ref":"entry-listing.json"
             },
             {
                "$ref":"single-entry.json"
             },
             {
                "$ref":"entry-info.json"
             },
             {
                "$ref":"url-info.json"
             }
             ]
      },
      "errors":{
         "items":{
            "$ref":"http://jsonapi.org/schema#/definitions/error"
         },
         "type":"array"
      },
      "include":{
         "description": "Resources included with the primary data.",
         "items":{
            "$ref":"http://jsonapi.org/schema#/definitions/resource"
         },
         "type":"array"
      },
      "links":{
         "$ref":"definitions.json#/definitions/links"
      },
      "meta":{
         "$ref":"definitions.json#/definitions/meta"
      },
      "resource":{
         "additionalProperties":false,
         "patternProperties":{
            "^_":{
               "description":"domain-specific custom information"
            }
         },
         "properties":{
            "base_url":{
               "format":"uri-reference",
               "type":"string"
            }
         },
         "required":[
            "base_url"
         ],
         "type":"object"
      },
      "response_message":{
         "type":"string"
      }
   },
   "required":[
      "links",
      "meta",
      "data"
   ]
}
